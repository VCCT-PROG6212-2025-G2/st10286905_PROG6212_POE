@model ReviewerClaimDetailsViewModel
@* AI Disclosure: ChatGPT assisted in creating this. Link: https://chatgpt.com/share/68ca99b5-dc0c-800b-b554-c315e49df063 *@
@{
    ViewData["Title"] = "Claim Details";
}

<!-- Claim Details -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white fw-bold">
        <i class="bi bi-file-earmark-text"></i> Claim Details
    </div>
    <div class="card-body">
        <table class="table table-sm table-striped align-middle mb-0">
            <tbody>
                <tr>
                    <th scope="row" class="w-25">Lecturer</th>
                    <td>@Model.LecturerName</td>
                </tr>
                <tr>
                    <th scope="row">Module</th>
                    <td>@Model.ModuleName</td>
                </tr>
                <tr>
                    <th scope="row">Hours Worked</th>
                    <td>@Model.HoursWorked</td>
                </tr>
                <tr>
                    <th scope="row">Hourly Rate</th>
                    <td>@Model.HourlyRate.ToString("R0.00")</td>
                </tr>
                <tr>
                    <th scope="row">Payment Amount</th>
                    <td class="fw-semibold">@Model.PaymentAmount.ToString("R0.00")</td>
                </tr>
                <tr>
                    <th scope="row">Lecturer Comment</th>
                    <td>
                        @if (!string.IsNullOrEmpty(Model.LecturerComment))
                        {
                            @Model.LecturerComment
                        }
                        else
                        {
                            <em class="text-muted">No comment</em>
                        }
                    </td>
                </tr>
                <tr>
                    <th scope="row">Program Coordinator</th>
                    <td>@Model.ProgramCoordinatorName</td>
                </tr>
                <tr>
                    <th scope="row">Program Coordinator Decision</th>
                    <td><span class="badge @Model.ProgramCoordinatorDecision.ToBgClass()">@Model.ProgramCoordinatorDecision</span></td>
                </tr>
                <tr>
                    <th scope="row">Program Coordinator Comment</th>
                    <td>
                        @if (!string.IsNullOrEmpty(Model.ProgramCoordinatorComment))
                        {
                            @Model.ProgramCoordinatorComment
                        }
                        else
                        {
                            <em class="text-muted">No comment</em>
                        }
                    </td>
                </tr>
                <tr>
                    <th scope="row">Academic Manager</th>
                    <td>@Model.AcademicManagerName</td>
                </tr>
                <tr>
                    <th scope="row">Academic Manager Decision</th>
                    <td><span class="badge @Model.AcademicManagerDecision.ToBgClass()">@Model.AcademicManagerDecision</span></td>
                </tr>
                <tr>
                    <th scope="row">Academic Manager Comment</th>
                    <td>
                        @if (!string.IsNullOrEmpty(Model.AcademicManagerComment))
                        {
                            @Model.AcademicManagerComment
                        }
                        else
                        {
                            <em class="text-muted">No comment</em>
                        }
                    </td>
                </tr>
                <tr>
                    <th scope="row">Status</th>
                    <td><span class="badge @Model.ClaimStatus.ToBgClass()">@Model.ClaimStatus</span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Uploaded Files -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-secondary text-white fw-bold">
        <i class="bi bi-paperclip"></i> Uploaded Files
    </div>
    <div class="card-body">
        @if (Model.Files.Any())
        {
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>File Name</th>
                        <th>Size (KB)</th>
                        <th>Uploaded On</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model.Files)
                    {
                        <tr>
                            <td>@file.FileName</td>
                            <td>@(file.FileSize / 1024)</td>
                            <td>@file.UploadedOn.ToString("g")</td>
                            <td>
                                <a asp-action="DownloadFile" asp-route-id="@file.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-download"></i> Download
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted mb-0"><em>No files uploaded for this claim.</em></p>
        }
    </div>
</div>

<!-- Review Section -->
@if (Model.ClaimStatus <= ClaimStatus.PENDING_CONFIRM && Model.AcademicManagerDecision == ClaimDecision.PENDING)
{
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-info text-white fw-bold">
            <i class="bi bi-check2-square"></i> Review Claim
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="comment" class="form-control" rows="4" placeholder="Enter your review comment here..."></textarea>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" formaction="@Url.Action("AcceptClaim")" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Approve
                    </button>
                    <button type="submit" formaction="@Url.Action("RejectClaim")" class="btn btn-danger">
                        <i class="bi bi-x-circle"></i> Reject
                    </button>
                </div>
            </form>
        </div>
    </div>
}

<!-- Back Button -->
<div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Claims
    </a>
</div>
