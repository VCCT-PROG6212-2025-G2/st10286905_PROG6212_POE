            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.CompletedClaims)
            {
                <tr>
                    <td>@claim.ModuleName</td>
                    <td>@claim.PaymentAmount.ToString("R0.00")</td>
                    <td>@claim.ProgramCoordinatorDecision</td>
                    <td>@claim.AcademicManagerDecision</td>
                    <td>@claim.ClaimStatus</td>
                    <td>
                        <a asp-action="ClaimDetails" asp-route-id="@claim.Id" class="btn btn-sm btn-primary">
                            View Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>No completed claims.</em></p>
}