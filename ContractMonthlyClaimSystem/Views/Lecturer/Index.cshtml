@model LecturerClaimsViewModel

@{
    ViewData["Title"] = "Lecturer - Claims";
}

<h2>My Claims</h2>

<p>
    <a asp-action="CreateClaim" class="btn btn-success">+ Create New Claim</a>
</p>

<h2>Pending Claims</h2>
@if (Model.PendingClaims.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Module</th>
                <th>Payment Amount</th>
                <th>Program Coordinator Decision</th>
                <th>Academic Manager Decision</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.PendingClaims)
            {
                <tr>
                    <td>@claim.ModuleName</td>
                    <td>@claim.PaymentAmount.ToString("R0.00")</td>
                    <td>@claim.ProgramCoordinatorDecision</td>
                    <td>@claim.AcademicManagerDecision</td>
                    <td>@claim.ClaimStatus</td>
                    <td>
                        <a asp-action="ClaimDetails" asp-route-id="@claim.Id" class="btn btn-sm btn-primary">
                            View Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>No pending claims.</em></p>
}

<h2>Completed Claims</h2>
@if (Model.CompletedClaims.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Module</th>
                <th>Payment Amount</th>
                <th>Program Coordinator Decision</th>
                <th>Academic Manager Decision</th>
