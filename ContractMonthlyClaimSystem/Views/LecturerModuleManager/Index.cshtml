@model LecturerModuleManagerIndexViewModel

<h2>Lecturers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Modules</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecturer in Model.Lecturers)
        {
            <tr>
                <td>@lecturer.Name</td>
                <td>@string.Join(", ", lecturer.Modules.Select(m => m.Code))</td>
                <td>
                    <a asp-action="ManageLecturerModules" asp-route-id="@lecturer.Id" class="btn btn-primary btn-sm">Manage Modules</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h2>All Modules</h2>

<table class="table">
    <thead>
        <tr>
            <th>Module Name</th>
            <th>Module Code</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var module in Model.Modules)
        {
            <tr>
                <td>@module.Name</td>
                <td>@module.Code</td>
                <td>
                    <form asp-action="DeleteModule" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@module.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Add New Module</h3>
<div class="card mt-3">
    <div class="card-body">
        <form asp-action="CreateModule" method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="NewModule.Name" class="form-label">Module Name</label>
                    <input asp-for="NewModule.Name" class="form-control" placeholder="Enter module name" />
                </div>
                <div class="col-md-6">
                    <label asp-for="NewModule.Code" class="form-label">Module Code</label>
                    <input asp-for="NewModule.Code" class="form-control" placeholder="Enter module code" />
                </div>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Add Module
                </button>
            </div>
        </form>
    </div>
</div>