@model ManageLecturerModulesViewModel

<h2>Manage Modules for @Model.LecturerName</h2>

<h3>Assigned Modules</h3>
@if (Model.AllModules.Where(m => Model.AssignedModuleIds.Contains(m.Id)).Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Module</th>
                <th style="width: 120px;">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var module in Model.AllModules.Where(m => Model.AssignedModuleIds.Contains(m.Id)))
            {
                <tr>
                    <td>@module.Name</td>
                    <td>
                        <form asp-action="RemoveLecturerModule" method="post">
                            <input type="hidden" name="lecturerId" value="@Model.LecturerId" />
                            <input type="hidden" name="moduleId" value="@module.Id" />
                            <button type="submit" class="btn btn-danger btn-sm w-100">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No assigned modules.</p>
}

<h3>Available Modules</h3>
@if (Model.AllModules.Where(m => !Model.AssignedModuleIds.Contains(m.Id)).Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Module</th>
                <th style="width: 120px;">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var module in Model.AllModules.Where(m => !Model.AssignedModuleIds.Contains(m.Id)))
            {
                <tr>
                    <td>@module.Name</td>
                    <td>
                        <form asp-action="AddLecturerModule" method="post">
                            <input type="hidden" name="lecturerId" value="@Model.LecturerId" />
                            <input type="hidden" name="moduleId" value="@module.Id" />
                            <button type="submit" class="btn btn-success btn-sm w-100">Assign</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No available modules.</p>
}

