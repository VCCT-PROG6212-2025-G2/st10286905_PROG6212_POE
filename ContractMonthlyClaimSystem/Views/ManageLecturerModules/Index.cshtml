@model ManageLecturerModulesIndexViewModel
@* AI Disclosure: ChatGPT assisted in creating this. Link: https://chatgpt.com/share/68ca99b5-dc0c-800b-b554-c315e49df063 *@

@{
    ViewBag.Title = "Manage Lecturers & Modules";
}

<!-- Lecturers -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white fw-bold">
        <i class="bi bi-people"></i> Lecturers
    </div>
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Modules</th>
                    <th>Contact Number</th>
                    <th class="text-end"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lecturer in Model.Lecturers)
                {
                    <tr>
                        <td>@lecturer.Name</td>
                        <td>@string.Join(", ", lecturer.Modules.Select(m => m.Code))</td>
                        <td>@lecturer.ContactNumber</td>
                        <td class="text-end">
                            <a asp-action="ManageLecturer" asp-route-id="@lecturer.Id"
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil-square"></i> Manage Lecturer
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- All Modules -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-secondary text-white fw-bold">
        <i class="bi bi-journal-bookmark"></i> All Modules
    </div>
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Module Name</th>
                    <th>Module Code</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var module in Model.Modules)
                {
                    <tr>
                        <td>@module.Name</td>
                        <td>@module.Code</td>
                        <td class="text-end">
                            <form asp-action="DeleteModule" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@module.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Add New Module -->
<div class="card shadow-sm">
    <div class="card-header bg-success text-white fw-bold">
        <i class="bi bi-plus-circle"></i> Add New Module
    </div>
    <div class="card-body">
        <form asp-action="CreateModule" method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="NewModule.Name" class="form-label">Module Name</label>
                    <input asp-for="NewModule.Name" class="form-control" placeholder="Enter module name" />
                </div>
                <div class="col-md-6">
                    <label asp-for="NewModule.Code" class="form-label">Module Code</label>
                    <input asp-for="NewModule.Code" class="form-control" placeholder="Enter module code" />
                </div>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Add Module
                </button>
            </div>
        </form>
    </div>
</div>
