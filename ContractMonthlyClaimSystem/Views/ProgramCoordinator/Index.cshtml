@model ReviewerClaimsViewModel

@{
    ViewData["Title"] = "Program Coordinator - Claims";
}

<h2>Pending Claims</h2>
@if (Model.PendingClaims.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Lecturer</th>
                <th>Module</th>
                <th>Payment Amount</th>
                <th>Program Coordinator Decision</th>
                <th>Academic Manager Decision</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.PendingClaims)
            {
                <tr>
                    <td>@claim.LecturerName</td>
                    <td>@claim.ModuleName</td>
                    <td>@claim.PaymentAmount.ToString("C")</td>
                    <td>@claim.ProgramCoordinatorDecision</td>
                    <td>@claim.AcademicManagerDecision</td>
                    <td>@claim.ClaimStatus</td>
                    <td>
                        <a asp-action="ClaimDetails" asp-route-id="@claim.Id" class="btn btn-sm btn-primary">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>No pending claims.</em></p>
}

