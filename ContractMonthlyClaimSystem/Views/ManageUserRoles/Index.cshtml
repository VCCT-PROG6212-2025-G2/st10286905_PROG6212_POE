@using ContractMonthlyClaimSystem.Models.Auth
@model List<UserRolesViewModel>

@* AI Disclosure: ChatGPT assisted in creating this. Link: https://chatgpt.com/share/68ca99b5-dc0c-800b-b554-c315e49df063 *@

@{
    ViewBag.Title = "Manage Users & Roles";
    var roles = ViewBag.AllRoles as List<AppRole>;
}

<!-- Users and Roles -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white fw-bold">
        <i class="bi bi-people"></i> Users and their Roles
    </div>
    <div class="card-body">
        <table class="table table-hover align-middle table-striped mb-0">
            <thead class="table-light">
                <tr>
                    <th>User</th>
                    <th>Roles</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@string.Join(", ", user.Roles)</td>
                        <td>
                            <a asp-action="Manage" asp-route-userId="@user.UserId"
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil-square"></i> Manage Roles
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Existing Roles -->
<div class="card shadow-sm">
    <div class="card-header bg-secondary text-white fw-bold">
        <i class="bi bi-shield-lock"></i> Existing Roles
    </div>
    <div class="card-body">
        <table class="table table-hover align-middle table-striped mb-3">
            <thead class="table-light">
                <tr>
                    <th>Role Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in roles)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td>
                            <form asp-action="DeleteRole" method="post" class="d-inline">
                                <input type="hidden" name="roleName" value="@role.Name" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Add Role -->
        <form asp-action="AddRole" method="post" class="input-group" style="max-width:400px;">
            <input type="text" name="roleName" placeholder="New role name" class="form-control" />
            <button type="submit" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add Role
            </button>
        </form>
    </div>
</div>